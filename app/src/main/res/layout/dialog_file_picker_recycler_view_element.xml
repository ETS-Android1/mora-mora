<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/dialog_file_picker_element_layout">

    <ImageView
        android:id="@+id/dialog_file_picker_element_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_folder"
        />

    <TextView
        android:id="@+id/dialog_file_picker_element_file_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_toRightOf="@id/dialog_file_picker_element_icon"
        android:text="Folder name"/>

</RelativeLayout>