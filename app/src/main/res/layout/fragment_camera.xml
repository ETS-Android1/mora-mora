<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/conversation_surfaceView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:keepScreenOn="true"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/camera_fragment_camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_video_cam_on"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/conversation_surfaceView"
        app:layout_constraintEnd_toEndOf="@+id/conversation_surfaceView" />

    <ImageView
        android:id="@+id/camera_fragment_camera_rear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_camera_rear"
        app:layout_constraintBottom_toBottomOf="@+id/conversation_surfaceView"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/camera_fragment_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_camera_picture"
        app:layout_constraintBottom_toBottomOf="@+id/conversation_surfaceView"
        app:layout_constraintEnd_toStartOf="@+id/camera_fragment_camera_button"
        app:layout_constraintStart_toEndOf="@+id/camera_fragment_camera_rear" />

</android.support.constraint.ConstraintLayout>