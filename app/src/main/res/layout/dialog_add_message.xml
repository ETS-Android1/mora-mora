<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/dialog_add_change_message_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_camera_picture"
        android:tint="@color/test_color"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_change_message_file"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_change_message_picture"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_change_message_picture"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_change_message_picture" />

    <ImageButton
        android:id="@+id/dialog_add_change_message_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_folder"
        android:tint="@color/test_color"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_change_message_camera"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick File"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_change_message_file"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_change_message_file"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_change_message_file" />

    <ImageButton
        android:id="@+id/dialog_add_change_message_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:tint="@color/test_color"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_video_cam_on"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_change_message_camera_app"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple\n Camera"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_change_message_camera"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_change_message_camera"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_change_message_camera" />

    <ImageButton
        android:id="@+id/dialog_add_change_message_camera_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_video_cam_on"
        android:tint="@color/test_color"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@id/dialog_add_change_message_mic_on"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera\n App"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_change_message_camera_app"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_change_message_camera_app"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_change_message_camera_app" />

    <ImageButton
        android:id="@+id/dialog_add_change_message_mic_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_microphone"
        android:tint="@color/test_color"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microhone"
        android:textAlignment="center"
        android:textSize="10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/dialog_add_change_message_mic_on"
        app:layout_constraintStart_toStartOf="@+id/dialog_add_change_message_mic_on"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_change_message_mic_on" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_add_change_message_editText_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_change_message_camera">

        <EditText
            android:id="@+id/dialog_add_change_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Native message"
            android:imeOptions="actionDone"
            android:minWidth="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_add_change_message_editText_native"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_add_change_message_editText_layout">

        <EditText
            android:id="@+id/dialog_add_change_message_message_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Translated message"
            android:imeOptions="actionDone"
            android:minWidth="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>